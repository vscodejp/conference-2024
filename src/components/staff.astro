---
import { getCollection } from "astro:content";
import ContentSection from "~/components/content-section.astro";
import StaffCard from "~/components/staff-card.astro";

const featuredSites = await getCollection("staff");
const orderedSites = featuredSites.sort(
  (a, b) => a.data.order! - b.data.order!,
);
---

<ContentSection title="スタッフ" id="staff">
  <div class="max-w-6xl space-y-2">
    <div class="grid grid-cols-2 gap-10 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5">
      {orderedSites.map((site) => <StaffCard staff={site} />)}
    </div>
  </div>
</ContentSection>
